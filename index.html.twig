{% extends 'base.html.twig' %}

{% set layout = setting_get('layout', 'boxed') == 'boxed' ? 'container' : 'container-fluid'  %}

{% block stylesheets %}
  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" href="{{ asset_theme('css/bootstrap.min.css') }}"/>

  <!-- Custom styles for this template -->
  <link rel="stylesheet" href="{{ asset_theme('css/general.css') }}"/>
{% endblock %}

{% block header %}
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="{{ layout }} d-flex justify-content-between">
      <a class="navbar-brand" href="{{ path('index') }}">{{ harmony.site_name }}</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
              aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        {{ menu_render('main_menu', {
          'currentClass': 'active',
          'childrenAttributes': { 'class': 'navbar-nav ml-auto' },
          'attributes': { 'class': 'nav-item' },
          'linkAttributes': { 'class': 'nav-link' }
        }) }}
      </div>
    </div>
  </nav>
{% endblock %}

{% block footer %}
  <footer class="footer">
    <div class="container">
      <span class="text-muted">{{ setting_get('footer_text')|raw }}</span>
    </div>
  </footer>
{% endblock %}