<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8"/>
  <title>{% block title %}{{ sonata_seo_title() }}{% endblock %}</title>

  {{ sonata_seo_metadatas() }}
  {{ sonata_seo_link_canonical() }}
  {{ sonata_seo_lang_alternates() }}
  {{ sonata_seo_oembed_links() }}

  {% block stylesheets %}
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="{{ asset_theme('css/bootstrap.min.css') }}"/>

    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="{{ asset_theme('css/general.css') }}"/>
  {% endblock %}

  <link rel="icon" type="image/x-icon" href="{{ asset_theme('images/favicon.ico') }}"/>
</head>
<body>
  {% set layout = setting_get('layout', 'boxed') == 'boxed' ? 'container' : 'container-fluid' %}

  {% block header %}
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <div class="{{ layout }} d-flex justify-content-between">
        <a class="navbar-brand" href="{{ path('index') }}">{{ harmony.site_name }}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
                aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
          {{ menu_render('main_menu', {
            'currentClass': 'active',
            'childrenAttributes': { 'class': 'navbar-nav ml-auto' },
            'attributes': { 'class': 'nav-item' },
            'linkAttributes': { 'class': 'nav-link' }
          }) }}
        </div>
      </div>
    </nav>
  {% endblock %}

  {% block main %}
    <main role="main" class="flex-shrink-0">
      <div class="container">
        {% block content %}{% endblock %}
      </div>
    </main>
  {% endblock %}

  {% block footer %}
    <footer class="footer">
      <div class="container">
        <span class="text-muted">{{ setting_get('footer_text')|raw }}</span>
      </div>
    </footer>
  {% endblock %}

  {% block javascripts %}{% endblock %}
</body>
</html>